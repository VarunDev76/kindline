<% if current_user && current_user.admin? %>
    <div class="page-header">
      <h1 class="page-title">Sales Staff <%= link_to 'Add Staff', new_user_path, class: "btn btn-primary pull-right", method: :get %></h1>
    </div>
    <div class="page-content">
    	<div class="panel">
	        <div class="panel-body">
	        	<table class="table table-hover dataTable table-striped width-full" data-plugin="dataTable" id="staff_table">
		            <thead>
		              <tr>
		                <th>Name</th>
						<th>Email</th>
						<th>Actions</th>
						<th>Actions</th>
		              </tr>
		            </thead>
		            <tbody>
		            	<% @users.each do |u| %>
							<tr>
								<td><%= u.name %></td>
								<td><%= u.email %></td>
								<td><%= link_to 'Edit', edit_user_path(u), method: :get %></td>
						        <td><%= link_to 'Delete', user_path(u), method: :delete, data: { confirm: 'Are you sure?' } %></td>
							</tr>
						<% end %>
	            	</tbody>
	          	</table>
	        </div>
      	</div>
    </div>
<%end%>

