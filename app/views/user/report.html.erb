<div class="page-content">
  <div class="panel">
    <div class="panel-body">
      

      <%= form_tag "/user/search", method: "get", class: "form-horizontal", remote: true do %>

          <div class="form-group">
            <label class="col-md-3 control-label">Select Store</label>
            <div class="col-md-9">
              <% stores = @stores.map{|a| ["#{a.name}", a.id] } %>
              <% stores = stores.unshift(['All Stores', 0]) %>
              <%= select_tag :store,options_for_select(stores), { class: "form-control"} %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label">Select User</label>
            <div class="col-md-9">
              <% users = @users.map{|a| ["#{a.name}", a.id] } %>
              <%# users = users.unshift(['All Users', 0]) %>
              <%= select_tag :user,options_for_select(users), {prompt: "Select User", class: "form-control"} %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label">Select Issue</label>
            <div class="col-md-9">
              <% issues = @issues.map{|a| ["#{a.name}", a.id] } %>
              <%# users = users.unshift(['All Users', 0]) %>
              <%= select_tag :issue,options_for_select(issues), {prompt: "Select Issues", class: "form-control"} %>
            </div>
          </div>

          <div class="form-group">
            <label for="Starting Date" class="col-md-3 col-xs-6 control-label" style="margin-top:20px;"> Starting Date </label>
            <div class="col-md-3 col-xs-6" style="margin-top:20px;">
              <%= date_field_tag( :starting_date ) %>
            </div>
            <label for="Etarting Date" class="col-md-3 col-xs-6 control-label" style="margin-top:20px;"> Ending Date </label>
            <div class="col-md-3 col-xs-6" style="margin-top:20px;">
              <%= date_field_tag( :ending_date ) %>
            </div>
          </div>
          <hr/>
          <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <p>
                  Download:
                  <%= link_to "CSV",  excel_user_index_path(format: "csv" ) %> |
                  <%= link_to "Excel",  excel_user_index_path(format: "xls") %>
                </p>
            </div>
          </div>

          <div class="form-group">
              <div class="col-md-offset-3 col-md-9">
                  <%= submit_tag "Search", class: "btn btn-primary" %>
                  <%= link_to 'Back', user_index_path, class: "btn btn-primary", method: "get" %>
              </div>
          </div>
          
          <hr/>
          <div class="user_data">
              
          </div>
      <% end %>
    </div>
  </div>
</div>