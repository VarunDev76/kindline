<div class="page-header">
  <h1 class="page-title">Add Store</h1>
</div>
<div class="page-content">
  <div class="panel">
    <div class="panel-body">
      <%= form_for(@store,url: (@store.new_record? ? stores_path : store_path), html: {class: "form-horizontal", id: "store_form"}) do |f| %>
          <% if @store.errors.any? %>
            <div class="alert dark alert-danger alert-dismissible">
              <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

              <ul>
              <% @store.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :name, class: "col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :address, class: "col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.text_field :address, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
              <div class="col-md-offset-3 col-md-9">
                  <%= f.submit (@store.new_record? ? "Submit" : "Update"), class: "btn btn-primary", id: "validateButton" %>
                   <%= link_to 'Back', stores_path, class: "btn btn-primary", method: "get" %>
              </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#store_form').formValidation({
      framework: "bootstrap",
      button: {
        selector: '#validateButton',
        disabled: 'disabled'
      },
      icon: null,
      fields: {
        "store[name]": {
          validators: {
            notEmpty: {
              message: 'The name is required and cannot be empty'
            }
          }
        },
        "store[address]": {
          validators: {
            notEmpty: {
              message: 'The address is required and cannot be empty'
            }
          }
        }
      }
    });
  })
</script>